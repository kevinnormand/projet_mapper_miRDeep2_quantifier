<tool id="extract_seqs_by_ids_modifier.pl" name="extract_seqs_by_ids_modifier.pl" version="1.1">
  <description>This tool will read the fasta file and extract sequences where identifiers contain the searched words.</description>
  <command interpreter="perl">
	extract_seqs_by_ids_modifier.pl --fasta_in $input1 --ids_file $input2 --precursor_shape $input3 --inverse $input4 --file_out $output
  </command>
  <inputs>
	<param format="fasta" name="input1" type="data" label="precurseur"/>
	<param format="tabular" name="input2" type="data" label="identifier"/>
	<param name="input3" type="select" label="precursor_sahpe">
		<option value="no"/>
		<option value="yes" selected="true"/>
	</param>
	<param name="input4" type="select" label="inverse">
		<option value="no"/>
		<option value="yes" selected="true"/>
	</param>
  </inputs>
  <outputs>
	<data format="fasta" name="output" type="data" label="no_identified_bos_miRNA.pre.fasta"/>
  </outputs>

  <citations>
	  <citation type="doi">author= Sylvain Marthey sylvain.marthey@jouy.inra.fr</citation>
  </citations>

  <help>
This tool will read the fasta file and extract sequences where identifiers contain the searched words.
exemple : extract_seqs_by_ids.pl --fasta_in mirbase.fa --ids_file bta --file_out mirbase_bta.fa
  </help>

</tool>
